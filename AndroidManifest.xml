<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netra.thepuzzler"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Default" >
        <activity
            android:name="com.netra.thepuzzler.MainActivity"
            android:label="@string/app_title"
            android:theme="@style/Theme.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.netra.thepuzzler.LevelActivity"
            android:theme="@style/customTheme" >
        </activity>
        <activity
            android:name="com.netra.thepuzzler.PuzzleActivity"
            android:theme="@style/customTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.netra.thepuzzler.StatsActivity"
            android:theme="@style/Theme.FullScreen" >
        </activity>
        <activity
            android:name="com.netra.thepuzzler.InstructActivity"
            android:theme="@style/Theme.FullScreen" >
        </activity>
        <activity
            android:name="com.netra.thepuzzler.AboutActivity"
            android:theme="@style/Theme.FullScreen" >
        </activity>
    </application>

</manifest>